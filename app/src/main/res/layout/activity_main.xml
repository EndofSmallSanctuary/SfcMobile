<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Welcome_Header.AppName"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/hpstandart"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="center"
        android:textSize="40sp"
        />

    <FrameLayout
        android:animateLayoutChanges="true"
        android:id="@+id/Welcome_Fragment.Container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/Welcome_Loading.Status"
        app:layout_constraintTop_toBottomOf="@id/Welcome_Header.AppName">
        <com.example.smarttag.Views.Components.StatusTextView
            android:id="@+id/Welcome_Status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:lineSpacingMultiplier="2"
            android:textSize="20sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/Welcome_Loading.Status"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="-30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textColor="@color/hpstandart"
        android:fontFamily="@font/roboto_bold"
        android:textAlignment="center"
        android:textSize="30sp"/>
    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/Welcome_Loading.Status"
        app:layout_constraintTop_toTopOf="@id/Welcome_Loading.Status"
        app:layout_constraintBottom_toBottomOf="@id/Welcome_Loading.Status"
        android:layout_height="0dp"
        app:SpinKit_Color="@color/hpstandart"
        style="@style/SpinKitView.Large.Wave"/>

</androidx.constraintlayout.widget.ConstraintLayout>