<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/BluetoothRecycler.Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/bluetooth_dev_brand"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:fontFamily="@font/roboto_bold"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        android:id="@+id/BluetoothRecycler.Serial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BluetoothRecycler.MAC"
        android:text="@string/serial_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="12sp"
        android:textColor="@color/black"
        android:id="@+id/BluetoothRecycler.MAC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BluetoothRecycler.Icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Smartag_H123123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>