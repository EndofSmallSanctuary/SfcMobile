<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_gravity="right"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/chat_message_client"
    android:minHeight="40dp"
    android:paddingEnd="10dp"
    android:minWidth="150dp"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="#333"
        android:text="Sample message text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Chat.Message.Client.Time"
        android:layout_marginStart="20dp"
        android:id="@+id/Chat.Message.Client.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"/>

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/Chat.Message.Client.Time"
        android:layout_marginBottom="3dp"
        android:textSize="11sp"
        android:text="19:57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>